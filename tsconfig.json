{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "ES2020",
      "typeRoots": ["node_modules/@types"],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
      "include": [
        "./app/**/*",
        "./app/**/*.json",
        "./migrations/**/*",
        "./migrations/**/*.json",
        "./config/**/*",
        "./migrations/**/*.json", 
        "./resources/**/*",
        "./resources/**/*.json",
        "./**/*.json",
        "app/__tests__/*"
      ]
  }